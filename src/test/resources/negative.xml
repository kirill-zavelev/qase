<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Negative" parallel="classes" thread-count="2">
    <listeners>
        <listener class-name="io.qase.app.util.testng.AnnotationTransformer"/>
        <listener class-name="io.qase.app.util.testng.TestListener"/>
    </listeners>
    <test name="Negative tests">
        <classes>
            <class name="io.qase.app.ui.LoginTest">
                <methods>
                    <include name="checkUnsuccessfulLoginInlineMessages"/>
                    <include name="checkUnsuccessfulLogin"/>
                </methods>
            </class>
            <class name="io.qase.app.ui.TestPlanTest">
                <methods>
                    <include name="checkTestPlanUpdateWithoutRequiredFields"/>
                    <include name="checkTestPlanCreationWithoutRequiredFields"/>
                </methods>
            </class>
            <parameter name="browser" value="chrome"/>
        </classes>
    </test>
</suite>
