pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M3"
    }

    parameters {
        gitParameter branchFilter: 'origin/(.*)', defaultValue: 'master', description: 'Select branch', name: 'BRANCH', type: 'PT_BRANCH'
        choice choices: ['regression.xml', 'smoke.xml', 'testng.xml', 'negative.xml'], name: 'TEST_NG_XML'
    }

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git branch: "${params.BRANCH}", url: 'https://github.com/kirill-zavelev/qase.git'

                // To run Maven on a Unix agent, use
                sh "mvn clean test -DsuiteXmlFile=${params.TEST_NG_XML}"
            }
        }
        stage('Reports') {
            steps {
                script {
                    allure([
                            includeProperties: false,
                            jdk              : '',
                            properties       : [],
                            reportBuildPolicy: 'ALWAYS',
                            results          : [[path: 'target/allure-results']]
                    ])
                }
            }
        }
    }
}
